<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear1"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="About MyOwnStay"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/history_button"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"

            android:id="@+id/hindu1"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="MyOwnStay History"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"

            android:id="@+id/muslim"
            android:background="@drawable/history_button"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="MyOwnStay Founders"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/history_button"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:id="@+id/christian"
            android:layout_marginTop="10dp"
           />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Refer a PG"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:background="@drawable/history_button"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Refer a PG for listing"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:background="@drawable/history_button"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/button5"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Terms And Conditions"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:background="@drawable/history_button"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/button6"
        android:layout_marginTop="10dp"
        />
</LinearLayout>